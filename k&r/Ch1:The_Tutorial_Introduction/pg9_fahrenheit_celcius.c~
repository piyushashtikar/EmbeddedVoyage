/* print Fahrenheit-Celsius table
for fahr = 0, 20, ..., 300 */
/*This is comment */.

#include<stdio.h>

main()
{
int i,fahr, celsius;
int upper,lower,step;

upper=300;
lower=0;
step=20;

fahr=lower;

while(fahr<=upper)
{
celsius=5* (fahr-32) /9;
//printf("%d\t%d\n",fahr,celsius);
printf("%3d\t%6d\n",fahr,celsius); 
/*
Numbers right justified.
*/
fahr=fahr+step;
}




}

